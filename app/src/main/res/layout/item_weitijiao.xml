<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        >
        <com.github.customview.MyImageView
            android:id="@+id/iv_item_weitijiao_icon"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:scaleType="centerCrop"
            android:src="@drawable/my_people"
            app:my_iv_radius="18dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_66"
            android:textSize="13sp"
            android:paddingLeft="10dp"
            android:id="@+id/tv_item_weitijiao_name"
            android:text="刘同学"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <com.github.customview.MyTextView
            android:id="@+id/tv_item_weitijiao_tixing"
            android:layout_width="55dp"
            android:layout_height="25dp"
            android:text="提醒"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:gravity="center"
            app:my_tv_solid="@color/home_text_color"
            app:my_tv_corner_radius="5dp"
            />
        <com.github.customview.MyTextView
            android:id="@+id/tv_item_weitijiao_yitixing"
            android:layout_width="55dp"
            android:layout_height="25dp"
            android:text="已提醒"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:gravity="center"
            app:my_tv_solid="@color/gray_d7"
            app:my_tv_corner_radius="5dp"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/background_f2"
        />


</LinearLayout>