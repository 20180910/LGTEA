<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/background_f2"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginBottom="2px"
        >
        <com.github.customview.MyCheckBox
            android:id="@+id/ch_item_my_upload"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            app:my_checkbox_checked="@drawable/my_check_select"
            app:my_checkbox_normal="@drawable/my_check_normal"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/iv_item_my_upload_icon"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"

            android:src="@drawable/banner"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="5dp"
            >
            <TextView
                android:id="@+id/tv_item_my_upload_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="大学英语第一学期"
                android:textSize="15sp"
                android:textColor="@color/gray_33"
                />
          <com.github.customview.MyTextView
              android:id="@+id/tv_item_my_upload_type"
              android:layout_width="30dp"
              app:my_tv_border_width="1dp"
              android:text="视频"
              android:textColor="@color/gray_33"
              android:textSize="11sp"
              android:gravity="center"
              app:my_tv_border_color="@color/gray_99"
              app:my_tv_corner_radius="2dp"
              android:layout_height="15dp"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_item_my_upload_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
            android:textSize="11sp"
            android:textColor="@color/gray_99"
            android:text="1M"
            />

    </LinearLayout>


</LinearLayout>