<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
    >
    <ImageView
        android:id="@+id/iv_item_taolun_details_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/fengexian_002"
        />
    <TextView
        android:id="@+id/tv_item_taolun_details_comment_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="李晓红"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:textSize="13sp"
        android:textColor="@color/blue_comment"
        />
    <TextView
        android:id="@+id/tv_item_taolun_details_comment"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="那你很棒棒哦，那你很棒棒哦，那你很棒棒哦。"
        android:gravity="center_vertical"
        android:textSize="13sp"
        android:textColor="@color/gray_66"
        android:paddingBottom="10dp"

        />


</LinearLayout>