<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/background_f2"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_marginBottom="2px"
        >
        <com.github.customview.MyImageView
            android:id="@+id/iv_item_chakanjilu_icon"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/my_people"
            app:my_iv_radius="18dp"
            />
        <TextView
            android:id="@+id/tv_item_chakanjilu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刘同学"
            android:textSize="13sp"
            android:paddingLeft="10dp"
            android:textColor="@color/gray_66"
            />
        <TextView
            android:id="@+id/tv_item_chakanjilu_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12:12"
            android:textSize="13sp"
            android:gravity="right"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/gray_66"
            />

    </LinearLayout>

</LinearLayout>