<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/background_f2"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginBottom="2px"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <com.github.customview.MyCheckBox
            android:id="@+id/ch_item_my_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:visibility="gone"
            app:my_checkbox_checked="@drawable/my_check_select"
            app:my_checkbox_normal="@drawable/my_check_normal"
            />

        <ImageView
            android:id="@+id/iv_item_my_download_icon"
            android:layout_width="80dp"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical"
            tools:src="@drawable/banner"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="5dp"
            >

            <TextView
                android:id="@+id/tv_item_my_download_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:maxLines="2"
                android:text="大学英语第一学期"
                android:textColor="@color/gray_33"
                android:textSize="15sp"
                />

            <com.github.customview.MyTextView
                android:id="@+id/tv_item_my_download_type"
                android:layout_width="30dp"
                android:layout_height="15dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="视频"
                android:textColor="@color/gray_33"
                android:textSize="10sp"
                app:my_tv_border_color="@color/gray_99"
                app:my_tv_border_width="1dp"
                app:my_tv_corner_radius="2dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_my_download_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="1M"
            android:textColor="@color/gray_99"
            android:textSize="11sp"
            />

    </LinearLayout>


</LinearLayout>