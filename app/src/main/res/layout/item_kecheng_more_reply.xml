<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/background_f2"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingLeft="10dp"
        >
        <TextView
            android:id="@+id/tv_item_kecheng_more_reply_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="李晓红"
            android:paddingRight="5dp"
            android:paddingLeft="10dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:textColor="@color/blue_comment"
            />
        <TextView
            android:id="@+id/tv_item_kecheng_more_reply_huifu"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="回复"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:textColor="@color/gray_66"
            />
        <TextView
            android:id="@+id/tv_item_kecheng_more_reply_toname"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="李晓红"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:textColor="@color/blue_comment"
            />
        <TextView
            android:id="@+id/tv_item_kecheng_more_reply_comment"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_height="wrap_content"
            android:text="那你很棒棒哦。"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:textColor="@color/gray_66"

            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:background="@color/background_f2"/>


</LinearLayout>