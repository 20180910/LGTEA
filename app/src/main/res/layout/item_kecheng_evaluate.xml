<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical"
              android:padding="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <com.github.customview.MyImageView
            android:id="@+id/iv_item_kecheng_evaluate_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/my_people"
            app:my_iv_radius="20dp"
            />

        <TextView
            android:id="@+id/tv_item_kecheng_evaluate_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:textColor="@color/gray_33"
            android:textSize="11sp"
            android:text="张小米"
            />

        <TextView
            android:id="@+id/tv_item_kecheng_evaluate_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-09-08"
            android:textColor="@color/gray_99"
            android:textSize="11sp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_kecheng_evaluate_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:ellipsize="end"
        android:maxLines="4"
        android:textSize="14sp"
        android:textColor="@color/gray_33"
        android:text="老师讲课非常详细"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/background_f2"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_item_kecheng_evaluate_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </android.support.v7.widget.RecyclerView>
    <TextView
        android:id="@+id/tv_item_kecheng_evaluate_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看更多回复"
        android:padding="10dp"
        android:textColor="@color/blue_comment"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/more_comment"
        android:layout_marginLeft="10dp"
        />
    <View
        android:id="@+id/v_item_kecheng_evaluate_reply_line"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="@color/background_f2"/>

</LinearLayout>