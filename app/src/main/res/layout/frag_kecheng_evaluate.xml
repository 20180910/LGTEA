<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
    >
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="center"
        android:padding="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评价该课程"
            android:textSize="16sp"
            android:textColor="@color/gray_33"
            />
        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:id="@+id/rb_fa_biao_pingjia"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:numStars="5"
            android:rating="0"
            app:mrb_progressTint="#FFC000"
            android:stepSize="1"
            android:isIndicator="true"
            style="@style/Widget.MaterialRatingBar.RatingBar"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        >
        <com.github.customview.MyEditText
            android:id="@+id/et_kecheng_evaluate_content"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            app:my_et_solid="@color/white"
            app:my_et_border_color="@color/gray_d7"
            app:my_et_corner_radius="5dp"
            app:my_et_border_width="1dp"
            android:hint="请输入评论"
            app:my_et_hiddenClear="true"
            android:textSize="13sp"
            android:gravity="top"
            android:padding="5dp"
            android:textColor="@color/gray_66"/>
        <com.github.customview.MyTextView
            android:id="@+id/tv_kecheng_evaluate_pinglun"
            android:layout_gravity="right"
            android:layout_width="60dp"
            android:layout_marginRight="10dp"
            android:layout_height="25dp"
            app:my_tv_solid="@color/home_text_color"
            android:text="评论"
            android:gravity="center"
            android:textColor="@color/white"
            app:my_tv_corner_radius="5dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/background_f2"
        />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="45dp"

        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        >

        <TextView
            android:id="@+id/tv_kecheng_evaluate_pinglun_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学生评论(4)"
            android:textColor="@color/gray_33"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/background_f2"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_kecheng_evaluate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </android.support.v7.widget.RecyclerView>
</LinearLayout>