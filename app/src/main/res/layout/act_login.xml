<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
    >
<include layout="@layout/app_title"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:src="@drawable/login_icon"/>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/login_1"
                    />
                <View
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_d7"/>

                <EditText
                    android:id="@+id/et_login_role"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:hint="老师"
                    android:paddingLeft="20dp"
                    android:textColor="@color/gray_99"
                    android:textSize="13sp"
                    android:imeOptions="actionNext"
                    />

                <ImageView
                    android:id="@+id/iv_login_dowm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"
                    android:src="@drawable/login_down"
                    />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/gray_d7"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/login_2"
                    />
                <View
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_d7"/>

                <EditText
                    android:id="@+id/et_login_gonghao"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:hint="请输入工号"
                    android:paddingLeft="20dp"
                    android:textColor="@color/gray_99"
                    android:textSize="13sp"
                    android:imeOptions="actionNext"
                    />



            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/gray_d7"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/login_3"
                    />
                <View
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_d7"/>

                <com.github.customview.MyEditText
                    android:id="@+id/et_login_pwd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:hint="请输入密码"
                    android:paddingLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/gray_99"
                    android:textSize="13sp"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    />

                <com.github.customview.MyCheckBox
                    android:layout_height="wrap_content"
                    android:id="@+id/cb_login_setting"
                    android:layout_width="wrap_content"
                    android:button="@null"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"
                    app:my_checkbox_checked_drawable="right"
                    app:my_checkbox_checked="@drawable/login_xianshi"
                    app:my_checkbox_normal="@drawable/login_yincang"
                   />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/gray_d7"/>
            <TextView
                android:id="@+id/tv_login_wangjimima"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="忘记密码"
                android:textColor="@color/home_text_color"
                android:textSize="11sp"

                />
            <com.github.customview.MyTextView
                android:id="@+id/tv_login"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="17sp"
                android:textColor="@color/white"
                app:my_tv_solid="@color/home_text_color"
                app:my_tv_corner_radius="5dp"
                android:text="登录"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@color/gray_66"
                android:gravity="center"
                android:paddingBottom="20dp"
                android:text="初始密码为身份证后六位"
                />


        </LinearLayout>

</LinearLayout>