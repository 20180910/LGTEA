<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/background_f2"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/tv_item_more_reply_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="李晓红"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:textColor="@color/blue_comment"
            />
        <TextView
            android:id="@+id/tv_item_more_reply_huifu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text=" 回复 "
            />
        <TextView
            android:id="@+id/tv_item_more_reply_toname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="李晓红"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:textColor="@color/blue_comment"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_item_more_reply_comment"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="那你很棒棒哦，那你很棒棒哦，那你很棒棒哦。"
        android:gravity="center_vertical"
        android:textSize="13sp"
        android:textColor="@color/gray_66"
        android:paddingBottom="10dp"
        android:layout_marginBottom="2px"
        />

</LinearLayout>