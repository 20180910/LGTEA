<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
    >
    <com.sk.lgtea.base.ProgressLayout
        android:id="@id/pl_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <in.srain.cube.views.ptr.PtrClassicFrameLayout
            android:id="@id/pcfl_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:ptr_resistance="2.1"
            app:ptr_ratio_of_header_height_to_refresh="1.2"
            >
            <android.support.v4.widget.NestedScrollView
                    android:id="@id/nsv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                       <com.github.customview.MyTextView
                           android:id="@+id/tv_weitijiao_tixing"
                           android:layout_margin="10dp"
                           android:layout_width="80dp"
                           android:layout_height="30dp"
                           android:text="批量提醒"
                           android:layout_gravity="center_horizontal"
                           android:gravity="center"
                           android:textSize="15sp"
                           android:textColor="@color/home_text_color"
                           app:my_tv_corner_radius="5dp"
                           app:my_tv_solid="@color/white"
                           app:my_tv_border_width="1dp"
                           app:my_tv_border_color="@color/home_text_color"
                           />
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_weitijiao"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >
                            
                        </android.support.v7.widget.RecyclerView>


                    </LinearLayout>
                </android.support.v4.widget.NestedScrollView>

        </in.srain.cube.views.ptr.PtrClassicFrameLayout>


    </com.sk.lgtea.base.ProgressLayout>

</LinearLayout>